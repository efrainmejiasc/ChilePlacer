
@{
    Layout = null;

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="~/js/admConfig.js"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/modal.css" />
}


<div class="container" style="margin-top:5%;">

    <div id='contenido' class="col-md-2">
        <input type="submit" class="btn btn-light" value="       Inicio      " onclick="inicio();" />
        <input type="submit" class="btn btn-light" value="Nuevo administrador" onclick="abrirAdm();" />
        <input type="submit" class="btn btn-light" value="Modificar contraseña" onclick="abrirAdmMod();" />
    </div>

</div>

<hr />

<div class="container text-center">
    <div id="_adm" class="modalTipo">
        <div class="modal-content">
            <div class="formulario-campo">

                <label class="text-justify" style="text-align:justify;font-size:16px;">Email</label>
                <input type='email' id="email" class='form form-control' placeholder="Ingrese email" style="text-align:justify;"  onblur="validarEmail();"/><br />

                <label class="text-justify" style="text-align:justify;font-size:16px;">Contraseña</label>
                <input type='password' id="password1" class='form form-control' placeholder="Ingrese contraseña" style="text-align:justify;" onblur="validarPassword();" />
                <label style="font-size=12px;">La contraseña debe contener numeros, letras y un minimo de ocho(8) caracteres</label><br />

                <label class="text-justify" style="text-align:justify;font-size:16px;">Confirme contraseña</label>
                <input type='password' id="password2" class='form form-control' placeholder="Confirme contraseña" style="text-align:justify;" /><br />

                <label class="checkbox-inline text-justify"> <input type="checkbox" id="robot" class="btn btn btn-default active" /> Correcto? </label>
                <br />

                <div class="row">
                    <div class="col-md-6">
                        <input type='submit' class='btn btn-success float-left' onClick='nuevoAdm();' value='Aceptar' />
                    </div>

                    <div class="col-md-6">
                        <input type='submit' class='btn btn-danger float-right' onClick='cerrarAdm();' value='Cancelar' />
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


<div class="container text-center">
    <div id="_admMod" class="modalTipo">
        <div class="modal-content">
            <div class="formulario-campo">

                <label class="text-justify" style="text-align:justify;font-size:16px;">Email</label>
                <input type='email' id="email2" class='form form-control' placeholder="Ingrese email" style="text-align:justify;" onblur="validarEmail2();" /><br />

                <label class="text-justify" style="text-align:justify;font-size:16px;">Contraseña</label>
                <input type='password' id="password3" class='form form-control' placeholder="Ingrese contraseña" style="text-align:justify;" onblur="validarPassword2();" />
                <label style="font-size=12px;">La contraseña debe contener numeros, letras y un minimo de ocho(8) caracteres</label><br />

                <label class="text-justify" style="text-align:justify;font-size:16px;">Confirme contraseña</label>
                <input type='password' id="password4" class='form form-control' placeholder="Confirme contraseña" style="text-align:justify;" /><br />

                <label class="checkbox-inline text-justify"> <input type="checkbox" id="robot2" class="btn btn btn-default active" /> Correcto? </label>
                <br />

                <div class="row">
                    <div class="col-md-6">
                        <input type='submit' class='btn btn-success float-left' onClick='modificarAdm();' value='Aceptar' />
                    </div>

                    <div class="col-md-6">
                        <input type='submit' class='btn btn-danger float-right' onClick='cerrarAdmMod();' value='Cancelar' />
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

